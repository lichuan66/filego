{
  "compilerOptions": {
    "target": "esnext",
    // "module": "esnext",
    "jsx": "preserve",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "noEmit": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom", "dom.iterable", "scripthost", "WebWorker"],
    "allowJs": false
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "packages/web/postcss.config.js",
    "packages/web/build/webpack.prod.js",
    "packages/web/build/webpack.dev.js",
    "packages/web/build/webpack.common.js"
  ]
}
